{
  "productName": "acreom",
  "extraMetadata": {
    "name": "acreom"
  },
  "copyright": "Copyright Â© 2024 acreom",
  "appId": "com.acreom.acreom-desktop",
  "afterSign": "./notarize/notarize.js",
  "publish": [
    {
      "provider": "github",
      "private": true,
      "owner": "acreom",
      "repo": "app",
      "releaseType": "draft"
    }
  ],
  "win": {
    "certificateSubjectName": "acreom Technologies s.r.o.",
    "timeStampServer": "http://timestamp.digicert.com",
    "rfc3161TimeStampServer": "http://timestamp.digicert.com",
    "extraResources": [
      {
        "from": "./Assets/windows",
        "to": "Assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./build",
        "to": "Assets",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "directories": {
    "output": "dist",
    "buildResources": "./build",
    "app": "."
  },
  "mac": {
    "hardenedRuntime": true,
    "entitlements": "./notarize/entitlements.mac.plist",
    "extraResources": [
      {
        "from": "./Assets/mac-${arch}",
        "to": "Assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./build",
        "to": "Assets",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Office",
    "icon": "./build/icon.png",
    "extraResources": [
      {
        "from": "./Assets/linux",
        "to": "Assets",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./build",
        "to": "Assets",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "files": [
    "package.json",
    {
      "from": "../frontend/dist",
      "to": "./out/acreom",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "../quick-capture/dist",
      "to": "./out/quick-capture",
      "filter": [
        "**/*"
      ]
    },
    "**/*.js",
    "**/node_modules/**",
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/.bin",
    "!notarize"
  ],
  "protocols": {
    "name": "acreom",
    "schemes": [
      "acreom"
    ]
  }
}
